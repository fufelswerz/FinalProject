<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context=".authorizationActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/code_doc"
        android:textSize="56sp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/drabinasolid"
        android:textColor="@color/pink" />

    <TextView
        android:id="@+id/auth_account"
        android:text="Войдите в аккаунт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/epilepsysansbold"
        android:textColor="#fdfdfd"
        android:textSize="36dp"/>

    <EditText
        android:id="@+id/user_login_auth"
        android:hint="Логин"
        android:inputType="text"
        android:layout_width="229dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:fontFamily="@font/epilepsysans"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <EditText
        android:id="@+id/user_password_auth"
        android:inputType="textPassword"
        android:hint="Пароль"
        android:layout_width="229dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:fontFamily="@font/epilepsysans"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:backgroundTint="@color/white"/>

    <Button
        android:id="@+id/button_auth"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:fontFamily="@font/epilepsysans"
        android:textSize="26dp"
        android:textColor="#fdfdfd"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="119dp"
        android:backgroundTint="@color/pink"
        android:text="Войти"/>

    <TextView
        android:id="@+id/link_to_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/epilepsysans"
        android:text="Зарегистрироваться"
        android:textColor="#fdfdfd"
        android:textSize="24dp" />

</LinearLayout>